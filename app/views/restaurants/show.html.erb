<div class="container mt-3">
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Reviews:</strong>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item list-group-item-light">
          <%= review.content %> |
          ⭐️ <%= review.rating %> stars
        </li>
      <% end %>
    </ul>
  </p>

  <div class="border-top">
    <p class="mt-3"><strong>Leave a review for <%= @restaurant.name %></strong></p>

    <%= simple_form_for([@restaurant, @review]) do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATING %>
      <%= f.submit %>
    <% end %>
  </div>
  <button type="button" class="btn btn-light mt-3"><%= link_to 'Back', restaurants_path %></button>

</div>
