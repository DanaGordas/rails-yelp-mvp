<div class="container mt-3">
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Reviews:</strong>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item list-group-item-light">
          <%= review.content %> |
          ⭐️ <%= review.rating %> stars
        </li>
      <% end %>
    </ul>
  </p>

  <br>
  <br>
  <button type="button" class="btn btn-light"><%= link_to 'Back', restaurants_path %></button>
  <br>
  <button type="button" class="btn btn-light"><%= link_to 'Write a review', new_restaurant_review_path(@restaurant)  %></button>

</div>
